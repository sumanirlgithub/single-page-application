    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>3.3.2</version>
    </parent>

    <name>Knowledge Check Module</name>
    <groupId>com.neo.146</groupId>
    <artifactId>knowledge-check</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>jar</packaging>

    <properties>
        <maven.compiler.source>21</maven.compiler.source>
        <maven.compiler.target>21</maven.compiler.target>
        <maven.compiler.release>21</maven.compiler.release>
        <spring.boot.starter.version>3.3.2</spring.boot.starter.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <mq-jms-spring-boot-starter.version>3.0.3</mq-jms-spring-boot-starter.version>
        <spring-integration.version>6.0.2</spring-integration.version>
        <wiremock.version>3.4.2</wiremock.version>
        <mapstruct.version>1.5.2.Final</mapstruct.version>
        <lombok-mapstruct-binding-version>0.2.0</lombok-mapstruct-binding-version>
        <jersey-client-version>1.19.3</jersey-client-version>
        <spring-cloud.version>2023.0.3</spring-cloud.version>
    </properties>

